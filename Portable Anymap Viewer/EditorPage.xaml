<Page
    x:Class="Portable_Anymap_Viewer.EditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Portable_Anymap_Viewer"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Portable_Anymap_Viewer="using:Portable_Anymap_Viewer"
    mc:Ignorable="d">
    <Page.TopAppBar>
        <CommandBar x:Name="EditorCommandBar">
            <CommandBar.Background>
                <SolidColorBrush Color="Black" Opacity="0.1"/>
            </CommandBar.Background>
            <AppBarButton x:Name="EditorCompare" Label="Compare" ToolTipService.ToolTip="Compare (Ctrl+/)" Click="EditorCompare_Click">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE13C;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:Name="EditorPreview" Label="Preview" ToolTipService.ToolTip="Preview" Click="EditorPreview_Click">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8FF;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton x:Name="EditorUndo" Label="Undo" Icon="Undo" Click="EditorUndo_Click"/>
            <AppBarButton x:Name="EditorRedo" Label="Redo" Icon="Redo" Click="EditorRedo_Click"/>
            <AppBarSeparator/>
            <AppBarButton x:Name="EditorSaveCopy" Label="Save copy" ToolTipService.ToolTip="Save copy (Ctrl+S)" Click="EditorSaveCopy_Click">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEA35;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:Name="EditorSave" Icon="Save" Label="Save" ToolTipService.ToolTip="Save" Click="EditorSave_Click"/>
            <AppBarButton x:Name="EditorCancel" Icon="Cancel" Label="Cancel" ToolTipService.ToolTip="Cancel (Esc)" Click="EditorCancel_Click"/>
        </CommandBar>
    </Page.TopAppBar>

    <Grid x:Name="EditorEditGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>
        <TextBox
            x:Name="EditorText"
            AcceptsReturn="True"
            TextWrapping="NoWrap"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            FontFamily="Assets/consola.ttf#Consolas"
            Visibility="Collapsed"
            Grid.Row="0"/>
        <Portable_Anymap_Viewer:HexView
            x:Name="EditorHex"
            Visibility="Collapsed"
            Grid.Row="1"/>
        <canvas:CanvasControl
            x:Name="EditorCanvas"
            CreateResources="EditorCanvas_CreateResources"
            Draw="EditorCanvas_Draw"
            Visibility="Collapsed"
            Grid.Row="2"/>
        <ProgressRing x:Name="EditorRing" IsActive="False" Visibility="Collapsed" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center" Width="60" Height="60"/>
    </Grid>
</Page>