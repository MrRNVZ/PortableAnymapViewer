<Page
    x:Class="Portable_Anymap_Viewer.EditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:controls="using:Portable_Anymap_Viewer.Controls"
    xmlns:local="using:Portable_Anymap_Viewer"
    xmlns:triggers="using:Portable_Anymap_Viewer.Triggers"
    mc:Ignorable="d">
    
    <Grid x:Name="EditorEditGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="DisplayModeStates">
                <VisualState x:Name="MobileMode">
                    <VisualState.StateTriggers>
                        <triggers:DisplayModeTrigger IsInDesktopMode="False"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="EditorTopCommandBar.Visibility" Value="Collapsed"/>
                        <Setter Target="EditorBottomCommandBar.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="DesktopMode">
                    <VisualState.StateTriggers>
                        <triggers:DisplayModeTrigger IsInDesktopMode="True"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="EditorTopCommandBar.Visibility" Value="Visible"/>
                        <Setter Target="EditorBottomCommandBar.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        
        <TextBox
            x:Name="EditorText"
            AcceptsReturn="True"
            TextWrapping="NoWrap"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            FontFamily="Assets/consola.ttf#Consolas"
            Visibility="Collapsed"
            Grid.Row="0"/>
        <controls:HexView
            x:Name="EditorHex"
            Visibility="Collapsed"
            Grid.Row="1"/>
        <canvas:CanvasControl
            x:Name="EditorCanvas"
            CreateResources="EditorCanvas_CreateResources"
            Draw="EditorCanvas_Draw"
            Visibility="Collapsed"
            Grid.Row="2"/>
        <ProgressRing x:Name="EditorRing" IsActive="False" Visibility="Collapsed" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center" Width="60" Height="60"/>
        <Popup x:Name="ExitPopup" IsOpen="False" VerticalAlignment="Top" HorizontalAlignment="Right">
            <StackPanel BorderBrush="White" BorderThickness="2">
                <TextBlock x:Name="ExitPopupText" Text="Unsaved changes will be lost when exit!"/>
                <Button x:Name="ExitPopupButton" Content="Exit"/>
            </StackPanel>
        </Popup>
    </Grid>

    <Page.TopAppBar>
        <CommandBar x:Name="EditorTopCommandBar">
            <CommandBar.Background>
                <SolidColorBrush Color="Black" Opacity="0.1"/>
            </CommandBar.Background>
            <AppBarButton x:Name="EditorCompareTop" Label="Compare" ToolTipService.ToolTip="Compare (Ctrl+/)">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE13C;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:Name="EditorPreviewTop" Label="Preview" ToolTipService.ToolTip="Preview" Click="EditorPreview_Click">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8FF;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton x:Name="EditorUndoTop" Label="Undo" Icon="Undo" Click="EditorUndo_Click"/>
            <AppBarButton x:Name="EditorRedoTop" Label="Redo" Icon="Redo" Click="EditorRedo_Click"/>
            <AppBarSeparator/>
            <AppBarButton x:Name="EditorSaveCopyTop" Label="Save copy" ToolTipService.ToolTip="Save copy (Ctrl+S)" Click="EditorSaveCopy_Click">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEA35;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:Name="EditorSaveTop" Icon="Save" Label="Save" ToolTipService.ToolTip="Save" Click="EditorSave_Click"/>
            <AppBarButton x:Name="EditorCancelTop" Icon="Cancel" Label="Cancel" ToolTipService.ToolTip="Cancel (Esc)" Click="EditorCancel_Click"/>
        </CommandBar>
    </Page.TopAppBar>
    <Page.BottomAppBar>
        <CommandBar x:Name="EditorBottomCommandBar">
            <CommandBar.Background>
                <SolidColorBrush Color="Black" Opacity="0.1"/>
            </CommandBar.Background>
            <AppBarButton x:Name="EditorCompareBottom" Label="Compare" ToolTipService.ToolTip="Compare (Ctrl+/)">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE13C;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:Name="EditorPreviewBottom" Label="Preview" ToolTipService.ToolTip="Preview" Click="EditorPreview_Click">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8FF;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton x:Name="EditorUndoBottom" Label="Undo" Icon="Undo" Click="EditorUndo_Click"/>
            <AppBarButton x:Name="EditorRedoBottom" Label="Redo" Icon="Redo" Click="EditorRedo_Click"/>
            <AppBarSeparator/>
            <AppBarButton x:Name="EditorSaveCopyBottom" Label="Save copy" ToolTipService.ToolTip="Save copy (Ctrl+S)" Click="EditorSaveCopy_Click">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEA35;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:Name="EditorSaveBottom" Icon="Save" Label="Save" ToolTipService.ToolTip="Save" Click="EditorSave_Click"/>
            <AppBarButton x:Name="EditorCancelBottom" Icon="Cancel" Label="Cancel" ToolTipService.ToolTip="Cancel (Esc)" Click="EditorCancel_Click"/>
        </CommandBar>
    </Page.BottomAppBar>
</Page>