<Page
    x:Class="Portable_Anymap_Viewer.ExplorerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Portable_Anymap_Viewer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Portable_Anymap_Viewer.Models"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="65" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="ExplorerHeaderTitle" Margin="10" FontSize="24" Grid.Row="0"></TextBlock>
        <ListView x:Name="ExplorerItemList"
                  ItemsSource="{x:Bind ExplorerItems}"
                  IsItemClickEnabled="True"
                  ItemClick="ExplorerItemList_ItemClick"
                  SelectionMode="None"                  
                  SelectionChanged="ExplorerItemList_SelectionChanged"
                  Grid.Row="1">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="data:ExplorerItem">
                    <StackPanel x:Name="ExplorerItemMainPanel"
                                Orientation="Horizontal" 
                                HorizontalAlignment="Stretch">

                        <Image x:Name="ExplorerItemThumbnail" Source="{x:Bind Thumbnail}" HorizontalAlignment="Center" Width="64" Height="64" />
                        <StackPanel x:Name="ExplorerItemSecondaryPanel"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center">
                            <TextBlock x:Name="ExplorerItemName" Text="{x:Bind Name}" HorizontalAlignment="Left" FontSize="16" Margin="0,0,0,5" />
                            <TextBlock x:Name="ExplorerItemType" Text="{x:Bind DisplayType}" HorizontalAlignment="Left" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
    
    <Page.BottomAppBar>
        <CommandBar >
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:Name="AddFile" Icon="Add" Label="Create File" Click="AddFile_Click"/>
            <!--<AppBarButton x:Name="AddFolder" Icon="Add" Label="Add Folder" Click="AddFolder_Click"/>
            <AppBarButton x:Name="RemoveFolders" Icon="Remove" Label="Remove Selected" Click="RemoveFolders_Click" Visibility="Collapsed"/>
            <AppBarButton x:Name="SelectFolders" Icon="Bullets" Label="Select Folders" Click="SelectFolders_Click"/>-->
            <CommandBar.SecondaryCommands>
                <AppBarButton x:Name="About" Label="About"></AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
