<UserControl
    x:Class="Portable_Anymap_Viewer.FolderItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Portable_Anymap_Viewer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="84"
    d:DesignWidth="400">

    <Grid Margin="0,0,0,0">
        <Image x:Name="thumbnailControl" Width="64" Height="64" Margin="10,10,326,26"/>
        <TextBlock x:Name="foldernameControl" HorizontalAlignment="Left" Margin="84,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <TextBlock x:Name="folderPathControl" HorizontalAlignment="Left" Margin="84,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
    </Grid>
</UserControl>
